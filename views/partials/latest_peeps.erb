<div class="latest-peeps">
    Latest Peeps
    <div id="peep-list">

      <% @peeps.each do  |peep| %>
        <div class="peep" id="peep-<%= peep.id %>">

          <div class="username"><a href="/users/profile/<%= peep.user.id %>"><b>&</b><%= peep.user.username %></a></div>
          <div class="display-name"><em><%= peep.user.display_name %></em></div>
          <div class="content"><%= peep.content %></div>
          <div class="created-at">Posted: <%= peep.created_at %></div>

        </div>
      <% end %>
    </div>

  </div>