<% if @user %>
<header>
  <div id="user-welcome-message">Hello there, <%= @user.display_name %></div>
  <div class="user-actions">
    <form action="/session" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit">Logout</button>
    </form>
  </div>
</header>
<% else %>
<header>
  <div id="welcome-message">Welcome to Chitter</div>
  <div class="user-actions">
    <form action="/users/new" method="get">
      <button type="submit">Sign Up</button>
    </form>
    <form action="/session/new" method="get">
      <button type="submit">Login</button>
    </form>
  </div>
  <!-- Add menu? Home, Profile, Users -->
</header>
<% end %>






<main>

  <% if @user %>
  <div @class="new-peep">
    Post a new peep!
    <form action="/peeps/new" method="post">
      <label>Peep content:<input name="content" type="text"></label>
      <button type="submit">Post Peep!</button>
    </form>
  </div>
  <% end %>


  <div class="latest-peeps">
    Latest Peeps
    <div id="peep-list">

      <% @peeps.each do  |peep| %>
        <div class="peep" id="peep-<%= peep.id %>">

          <div class="username"><a href="/users/profile/<%= peep.user.id %>"><b>&</b><%= peep.user.username %></a></div>
          <div class="display-name"><em><%= peep.user.display_name %></em></div>
          <div class="content"><%= peep.content %></div>
          <div class="created-at">Posted: <%= peep.created_at %></div>

        </div>
      <% end %>
    </div>

  </div>

</main>